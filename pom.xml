<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.soitoolkit.commons.poms</groupId>
        <artifactId>soitoolkit-default-parent</artifactId>
        <version>0.6.1-M2</version>
    </parent>
    
    <groupId>se.skltp.ei</groupId>
    <artifactId>skltp-ei-parent</artifactId>
    <version>1.1.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>skltp-ei-parent</name>

    <scm>
        <connection>scm:svn:https://skltp.googlecode.com/svn/tp/ei/trunk</connection>
        <developerConnection>scm:svn:https://skltp.googlecode.com/svn/tp/ei/trunk</developerConnection>
        <url>https://skltp.googlecode.com/svn/tp/ei/trunk</url>
    </scm>

    <repositories>
    <!-- Sonatype staging repo added to be able to build VP using artifacts
      not yet pushed to central maven. In this specific case its about
      new version of itintegration registry constracts.
      
      <groupId>se.rivta.infrastructure.itintegration</groupId>
            <artifactId>ServiceContracts_infrastructure_itintegration_registry</artifactId>
            <version>2.0-RC2</version>
         -->
      <repository>
        <id>sonatype-nexus-staging-repository</id>
        <url>https://oss.sonatype.org/content/repositories/staging/</url>
        <snapshots>
          <enabled>false</enabled>
        </snapshots>
      </repository>
    </repositories>
    
	<modules>
		<module>composites/schema</module>
		<module>composites/svc</module>
		<module>modules/intsvc</module>
        <module>applications/mule-backend-app</module>
        <module>applications/mule-frontend-app</module>
	</modules>
		
  <build>
    <plugins>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
	<version>1.10.b1</version>
        <configuration>
          <properties>
            <year>2013</year>
            <organization>Inera AB &lt;http://www.inera.se/&gt;</organization>
            <product>SKLTP</product>
          </properties>
          <strictCheck>true</strictCheck>
	  <header>http://skltp.googlecode.com/svn/tp/docs/license-header-template.txt</header>
          <encoding>UTF-8</encoding>
          <includes>
            <include>src/main/**</include>
            <include>src/test/**</include>
          </includes>
          <excludes>
            <exclude>**/*.xsd</exclude>
            <exclude>**/*.wsdl</exclude>
            <exclude>**/*.dtd</exclude>
          </excludes>
	  <useDefaultExcludes>true</useDefaultExcludes>
          <mapping>
            <tag>DYNASCRIPT_STYLE</tag>
          </mapping>
          <useDefaultMapping>true</useDefaultMapping>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
